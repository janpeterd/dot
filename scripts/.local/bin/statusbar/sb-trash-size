#!/bin/sh
trashdir=/home/jp/.local/share/Trash/files/
emoji="♻️"


case $BLOCK_BUTTON in
	1) notify-send "$emoji Emptying trash" && gio trash --empty && pkill -RTMIN+16 dwmblocks ;;
	2) setsid -f "$TERMINAL" -e lf /home/jp/.local/share/Trash/files ;;
	3) notify-send "$emoji Trash size module" "Shows size of Trash\n\- Left click to Empty Trash.\n\- Middle click to open Trash location in lf." && pkill -RTMIN+16 dwmblocks ;;
esac


cd $trashdir
trashsize=$(du -ch * | tail -1 | sed -e 's/\s.*$//')

output=$(echo -n "$emoji""$trashsize")

echo $output
