#!/bin/bash



title=$(playerctl -p Sonixd metadata title)
artist=$(playerctl -p Sonixd metadata artist)
album=$(playerctl -p Sonixd metadata album)
Sonixd_status=$(playerctl -p Sonixd status)

sacad "$artist" "$album" 600 /tmp/sonixd_cover.jpg

notify-send -i /tmp/sonixd_cover.jpg Sonixd-info "Title: $title\nArtist: $artist\nAlbum: $album\nStatus: $Sonixd_status"
